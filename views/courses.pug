extends ./layout/index.pug

block content
  main.container
    h2.title-section Our Upcoming Courses and Workshops
    div.container-courses
      each course in courses
        - const {name, price, places, image, description, slug} = course

        div.card
          div
            img(loading="lazy", src=`/img/course${image}.jpg`, class="course-image" , alt=`Image about ${name}`, title=`Image about ${name}`)
          div.container-content
            h3 #{name}
            p Price: 
              span.bold $#{price} Dolars
            p Places: 
              span.bold #{places} Available(s)
            p.description #{description.substr(0, 150)  + '...'}
            a(href=`courses/${slug}`, class="btn") About this Course