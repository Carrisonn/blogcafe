doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="color-scheme", content="light dark")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(name="description" content="Web Site about Coffee")
    link(rel="icon" href="/img/web-icon.svg" type="image/svg+xml")
    title #{actualSection} - #{websiteName}
    link(rel="prefetch" href="/courses.pug" as="document")
    link(rel="preload", href="/css/modern-normalize.css" as="style")
    link(rel="stylesheet", href="/css/modern-normalize.css")
    link(rel="preload", href="/css/styles.css" as="style")
    link(rel="stylesheet", href="/css/styles.css")
    link(rel="preload", href="/css/mobile-styles.css" as="style")
    link(rel="stylesheet", href="/css/mobile-styles.css" media="only screen and (width < 768px)")

  body 
    #{header}
      include nav 
      div.container
        h2.web-info Coffee blog with tips and courses
        p.web-info Learn from the experts with the best recipes and tips
    
    block content
    
    #{footer}
      include nav